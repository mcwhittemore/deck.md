html.no-js(lang='en')
  //<![endif]
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

    title #{locals.title}
    meta(name='description', content='')
    meta(name='viewport', content='width=1024, user-scalable=no')

    // DECK CORE CSS
    - for(var i=0; i<locals.coreCSS.length; i++){
      style!= locals.coreCSSFiles[locals.coreCSS[i]]
    - }

    //add in custom styles from config.css
    - for(var i=0; i<locals.css.length; i++){
      style!= locals.cssFiles[locals.css[i]]
    - }

    // Modernizr.
    - for(var i=0; i<locals.modernizrJS.length; i++){
      script!= locals.modernizrJSFiles[locals.modernizrJS[i]]
    - }

  body

    //- -----------------------------------------------------------------------
    //- Slides.
    //- -----------------------------------------------------------------------
    .deck-container
      block slides

      //- ---------------------------------------------------------------------
      //- Extension Snippets.
      //- ---------------------------------------------------------------------
      // deck.navigation snippet
      a.deck-prev-link(href="#", title="Previous") &#8592;
      a.deck-next-link(href="#", title="Next") &#8594;

      // deck.status snippet
      p.deck-status
        span.deck-status-current
        | /
        span.deck-status-total

      // deck.goto snippet
      form.goto-form(action=".", method="get")
        label(for="goto-slide") Go to slide:
        input#goto-slide(type="text", name="slidenum", list="goto-datalist")
        datalist#goto-datalist
        input(type="submit", value="Go")

      //deck.hash snippet
      a.deck-permalink(href=".", title="Permalink to this slide") #

    //- -----------------------------------------------------------------------
    //- JavaScript
    //- -----------------------------------------------------------------------
    
    // JQUERY
    - for(var i=0; i<locals.jqueryJS.length; i++){
      script!= locals.jqueryJSFiles[locals.jqueryJS[i]]
    - }

    // DECK CORE JS
    - for(var i=0; i<locals.coreJS.length; i++){
      script!= locals.coreJSFiles[locals.coreJS[i]]
    - }

    // Add in JS files from config.js
    - for(var i=0; i<locals.js.length; i++){
      script!= locals.jsFiles[locals.js[i]]
    - }
    

    // Initialize the deck.
    script
      $(function() {
        $.deck('.slide');
      });
